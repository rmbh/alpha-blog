<h1 align="center">Listing all articles</h1>
<div class="center">
  <%= link_to "Create new article", new_article_path, class: "btn btn-xs btn-success" %>
</div><br/>

<% @articles.each do |a| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to a.title, article_path(a) %>
        </div>
        <div class="article-body">
          <%= truncate(a.description, length: 100) %>
        </div>
        <div class="article-actions">
          <%= link_to "Edit this article", edit_article_path(a), class: "btn btn-xs btn-primary article-btn" %>
          <%= link_to "Delete this article", article_path(a), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-xs btn-danger article-btn" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
